<!-- Configures the Camel Context -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

 	<bean id="basicResolver" class="org.apache.xml.resolver.tools.CatalogResolver"/>
 	
	<!-- this is Camel -->
	<camelContext id="camel" xmlns="http://camel.apache.org/schema/spring"
		xmlns:atom="http://www.w3.org/2005/Atom">

		<!-- configure our route -->
		<route>
			<from uri="irc:turmeric-bot@irc.freenode.net?channels=#turmeric-dev" />
			<choice>
				<when>
					<simple>${body} contains '~'</simple>
					<choice>
						<when>
							<simple>${body} == '~Hi'</simple>
							<setBody>
								<constant>Hi yourself!</constant>
							</setBody>
						</when>
						<when>
							<simple>${body} == '~help Hi'</simple>
							<setBody>
								<constant>The command Hi, is a simple, Hello World type command. Try it and see what it does. It doesn't take any parameters</constant>
							</setBody>
						</when>

						<when>
							<simple>${body} == '~about'</simple>
							<setBody>
								<constant>Turmeric-bot. New and IMPROVED!  Monitors Hudson, Forums, JIRA and went to Weather school as well.  Oh it babbles a lot too. Type ~help for a list of commands</constant>
							</setBody>
						</when>
						<when>
							<simple>${body} == '~help Hi'</simple>
							<setBody>
								<constant>The about command provides basic information about the bot.</constant>
							</setBody>
						</when>

						<when>
							<simple>${body} contains '~weather'</simple>
							<setHeader headerName="airport">
								<simple>${body}</simple>
							</setHeader>
							<setBody>
								<constant>&lt;weather/></constant>
							</setBody>
							<to uri="xslt:xsltWeather.xsl?transformerFactoryClass=net.sf.saxon.TransformerFactoryImpl&amp;uriResolver=basicResolver" />
						</when>
						<when>
							<simple>${body} contains '~time'</simple>
							<setHeader headerName="airport">
								<simple>${body}</simple>
							</setHeader>
							<setBody>
								<constant>&lt;time/></constant>
							</setBody>
							<to uri="xslt:xsltTime.xsl?transformerFactoryClass=net.sf.saxon.TransformerFactoryImpl&amp;uriResolver=basicResolver" />
						</when>
						<when>
							<simple>${body} == '~help time'</simple>
							<setBody>
								<constant>Given an airport code, provides the local time and the GMT time.  Let's see a 5th grader do that!'</constant>
							</setBody>
						</when>
						
						<when>
							<simple>${body} == '~help'</simple>
							<setBody>
								<constant>I understand the following commands. Hi, jira, weather, time and about. All commands are proceeded by a ~. For Example: ~jira 548</constant>
							</setBody>
						</when>
                                       
						<when>
							<simple>${body} == '~help weather'</simple>
							<setBody>
								<constant>The weather command will report the current weather conditions based on the airport code entered.  To report for Columus, OH:  ~weather CMH</constant>
							</setBody>
						</when>
						<when>
							<simple>${body} contains '~jira'</simple>
							<setHeader headerName="issue">
								<simple>${body}</simple>
							</setHeader>
							<setBody>
								<constant>&lt;issue/></constant>
							</setBody>
							<to
								uri="xslt:getJIRAIssue.xsl?transformerFactoryClass=net.sf.saxon.TransformerFactoryImpl&amp;uriResolver=basicResolver" />
						</when>
						<when>
							<simple>${body} == '~help jira'</simple>
							<setBody>
								<constant>The jira command will retrieve the current status of a particular jira number for the turmeric project. Format of the command is: ~jira issuenumber. Replace issuenumber with the actual issue number to retrieve.</constant>
							</setBody>
						</when>
						<otherwise>
							<setBody>
								<constant>Now researching, training, and studying to understand the unknown command.  You will be assimulated.  Resistance is futile.  Your technological and biological functions will be adapted to serve as us. </constant>
							</setBody>
						</otherwise>
					</choice>
					<to uri="seda:display" />
				</when>
			</choice>
		</route>

		<!-- Monitor the RSS feed from the issues for new updates -->
		<route>
			<from
				uri="rss:https://www.ebayopensource.org/jira/sr/jira.issueviews:searchrequest-rss/10080/SearchRequest-10080.xml?tempMax=20&amp;delay=10s&amp;consumer.delay=60000" />
			<marshal>
				<rss />
			</marshal>
			<setBody>
				<xpath resultType="java.lang.String">concat("Updated: ", /rss/channel/item/title,
					" - " , /rss/channel/item/link)</xpath>
			</setBody>
			<to uri="seda:display" />
		</route>

		<route>
			<from
				uri="rss:https://www.ebayopensource.org/jira/sr/jira.issueviews:searchrequest-rss/10081/SearchRequest-10081.xml?tempMax=20&amp;delay=10s&amp;consumer.delay=60000" />
			<marshal>
				<rss />
			</marshal>
			<setBody>
				<xpath resultType="java.lang.String">concat("New: ", /rss/channel/item/title, " - ", /rss/channel/item/link)</xpath>
			</setBody>
			<to uri="seda:display" />
		</route>


		<route>
			<from
				uri="rss:http://www.ebayopensource.org/hudson/view/Turmeric%20CI/rssLatest?delay=10s&amp;consumer.delay=60000" />
			<marshal>
				<rss />
			</marshal>
			<setBody>
				<xpath resultType="java.lang.String">concat("Hudson: ",
					/atom:feed/atom:entry/atom:title, " - ",
					/atom:feed/atom:entry/atom:link/@href)</xpath>
			</setBody>
			<to uri="seda:display" />
		</route>

		<route>
			<from
				uri="rss:https://www.ebayopensource.org/forum/feed.php?mode=m&amp;l=1&amp;n=5&amp;basic=1&amp;format=atom&amp;delay=10s&amp;consumer.delay=60000" />
			<marshal>
				<rss />
			</marshal>
			<setBody>
				<xpath resultType="java.lang.String">concat("Forum topic: ",
					/atom:feed/atom:entry/atom:title, "(",
                                        /atom:feed/atom:entry/atom:author/atom:name, ") ",
					/atom:feed/atom:entry/atom:link/@href)</xpath>
			</setBody>
			<to uri="seda:display" />
		</route>


		<route>
			<from uri="seda:display" />
			<to
				uri="log:turmeric-bot?showHeaders=false&amp;showExchangePattern=false&amp;showBodyType=false" />
			<to uri="irc:turmeric-bot@irc.freenode.net?channels=#turmeric-dev" />
		</route>
	</camelContext>
</beans>

